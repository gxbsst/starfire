<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(tire) -%>">
  <span class='title'>
    <%= tire.category %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.tires_tire_path(tire),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_tires_admin_tire_path(tire),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.tires_admin_tire_path(tire),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => tire.category),
        :method => :delete %>
  </span>
</li>
