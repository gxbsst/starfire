
<% if @title.is_a? Array %>
    <% content_for :title, @title.reverse.join("-") %>
<% else %>
    <% content_for :title, @title %>
<% end %>

<% content_for :title_image do %>
 <%#= image_tag "news_pic1.jpg" %>
 <h2>新闻中心</h2>
<% end %>

<div class="cb_left news">
  <h2><%= @item.title %></h2>


  <div class="date_outer">
    <!-- <span>时间：<%#= @item.publish_date.strftime("%Y.%m.%d ") %></span> -->
    <span>来源：<%= @item.source %></span>
  </div>

  <div class="new_content">
    <%= raw @item.body %>
  </div>

</div>

<%= render 'sidebar' %>